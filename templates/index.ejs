<% var quantity = 0;  %>
<html>

<head>
    <title>EJS to PDF Example</title>
    <style>
        .table {
            width: 100%;
            border: solid 1px black;
        }
        .table-footer {
            width: 50%;
            border: solid 1px black;
            float: right;
        }

        .header {                                                                                                          
            font-size: 30px;                                                                                               
            font-weight: bold;
        }                                                                                                                  
        .row {                                                                                                             
            width: 100%;                                                                                                   
            font-size: 30px;                                                                                               
            font-weight: 200;                                                                                              
        }                                                                                                                  
                                                                                                                           
        .row > td, .header > th {                                                                                          
            width: 33%;                                                                                                    
        }                                                                                                                  
