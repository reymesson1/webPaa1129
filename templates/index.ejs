                        <h5 class="title" style="font-size:20px;" >Calle. Desiderio Arias esq Juan Miguel Roman</h5>
                        <h4 class="title" style="font-size:20px" >Bella Vista, Sto. Dgo.</h4>                
                        <h5 class="title" style="font-size:40px" >Tel.: 809 638-9999</h5>                                  
                        <h5 class="title" style="font-size:20px" >Horario Lunes a Viernes 7:30am a 7:00pm</h5>             
                        <h5 class="title" style="font-size:20px" >Sabado 8:00am a 1:00pm</h5>                              
                        <h5 class="title" style="font-size:20px" >RNC: 131473865</h5>                                       
                </tr>                                                                                                      
             <% item.forEach(function (employee,index) { %>                                                                
                <tr class="row">                                                                                           
                    <td>                                                                                                   
                        <%= index %>                                                                                       
                    </td>                                                                                                  
                    <td style="font-weight: bold !important;"  >                                                           
                        &nbsp;&nbsp;<%= employee.firstname %>                                                              
                    </td>                                                                                                  
                    <td>                                                                                                   
                        <%= employee.item %>                                                                               
                    </td>                                                                                                  
                    <td>                                                                                                   
                        <%= employee.development %>                                                                        
                    </td>                                                                                                  
                    <td>                                                                                                   
                        <%= employee.project %>
                    </td>                                                                                                  
                    <% plantRateSum += employee.project %>                                                                 
                    <% fecha = employee.date %>                                                                            
                    <% fechaentrega = employee.fechaentrega %>                                                             
                    <% idorder = employee.id %>                                                                            
                    <% quantity += employee.quantity %>                                                                    
                </tr>                                                                                                      
            <% })%>                                                                                                        
        </tbody>                                                                                                           
    </table>                                                                                                               
